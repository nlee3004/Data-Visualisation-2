{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Gross Domestic Product per capita (Income per person)",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/nlee3004/Data-Visualisation-2/main/custom.geo.topojson",
    "format": {"type": "topojson", "feature": "custom.geo"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/nlee3004/Data-Visualisation-2/main/gapminder_alcohol.csv"
        },
        "key": "country",
        "fields": ["incomeperperson"]
      }
    },
    {"calculate": "datum.incomeperperson", "as": "Alcohol"}
  ],
  "projection": {"type": "equalEarth"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "incomeperperson",
      "type": "quantitative",
      "scale": {"scheme": "purpleblue"},
      "title": "Gross Domestic Product per capita (Income per person)"
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {
        "field": "incomeperperson",
        "type": "quantitative",
        "title": "Gross Domestic Product per capita (Income per person)"
      }
    ]
  },
  "config": {}
}