{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Urban population percentage",
  "width": 800,
  "height": 600,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/nlee3004/Data-Visualisation-2/main/custom.geo.topojson",
        "format": {"type": "topojson", "feature": "custom.geo"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/nlee3004/Data-Visualisation-2/main/gapminder_alcohol.csv"
            },
            "key": "country",
            "fields": ["urbanrate"]
          }
        },
        {"calculate": "datum.urbanrate", "as": "Alcohol"}
      ],
      "projection": {"type": "equirectangular"},
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "urbanrate",
          "type": "quantitative",
          "scale": {"scheme": "goldorange"},
          "title": "Urban population percentage"
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "Country"},
          {
            "field": "urbanrate",
            "type": "quantitative",
            "title": "Urban population percentage"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/nlee3004/Data-Visualisation-2/main/gapminder_alcohol.csv"
      },
      "transform": [
        {
          "window": [{"op": "rank", "as": "ranking"}],
          "sort": [{"field": "urbanrate", "order": "descending"}]
        },
        {"filter": "datum.ranking == 1"},
        {
          "calculate": "'Country with the highest urban population percentage is:  '+datum['country']+'='+ datum['urbanrate']+'%'",
          "as": "text_annotation"
        }
      ],
      "encoding": {"text": {"field": "text_annotation"}},
      "layer": [{"mark": {"type": "text", "align": "left", "dy": -200}}]
    }
  ],
  "config": {}
}